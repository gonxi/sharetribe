        %input{:name => @conversation.payment_receiver, :type => "hidden", :value => @conversation.listing }
          %input{:name => "amount", :type => "hidden", :value => @braintree_payment.sum }
            %input{:alt => "Realice pagos con PayPal: es rÃ¡pido, gratis y seguro", :border => "0", :name => "submit", :src => "http://www.paypal.com/es_ES/i/btn/x-click-but01.gif", :type => "image"}



