  %p
    = t(".payment_receiver")

    = "#{link_to payment_receiver.name, payment_receiver}".html_safe

  %p
    = "#{t("payments.form.product")}"
    = link_to "#{@conversation.listing.title}", @conversation.listing
  %p
    = "#{t("payments.form.price")}"
