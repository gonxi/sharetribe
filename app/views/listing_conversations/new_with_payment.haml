- content_for :javascript do
  initialize_send_message_form('#{I18n.locale}');

- content_for :title_header do
  %h1
    = action_button_label(listing)
    = link_to(listing.title, listing)



#new_message_form.centered-section
  %h1
    = "Explica al técnico lo mejor posible tu problema."
  %h2
    = "1- El técnico recibirá un mensaje con los detalles del trabajo."
  %h2
    = "2- Si el técnico acepta el trabajo tienes que depositar el dinero en el fondo de Klikaid.com."
  %h2
    = "3- Cuando marques el trabajo como finalizado liberaremos el dinero al técnico."
  %h2
    = "4- Recuerda valorar y dejar tu opinión sobre el técnico."
  %h3
    = "(Puedes llamar al 900 52 52 54 en cualquier momento para resolver tus dudas del proceso)"


  = render partial: "conversations/details", locals: { listing_conversation: @listing_conversation, listing: listing, transaction: nil }

  = form_for contact_form, :url => contact_to_listing do |form|

    = form.label :content, t("conversations.new.message_to", author_name: link_to(listing.author.name, listing.author)).html_safe
    = form.text_area :content, :class => "text_area"
    = form.hidden_field :sender_id, :value => @current_user.id

    = form.hidden_field :listing_id, :value => @listing.id
    = form.hidden_field :community_id, :value => @current_community.id
    = form.button action_button_label(listing), :class => "send_button"
